    "eslint-plugin-standard": "^4.0.0",
    "ganache-cli": "^6.1.6",
    "mocha": "^6.0.0",
    "nyc": "^13.0.1",
    "sinon": "^7.2.4",
    "supertest": "^3.4.1",
    "truffle-contract": "^4.0.5",
    "web3": "1.0.0-beta.36"
